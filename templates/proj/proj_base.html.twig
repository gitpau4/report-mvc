<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Adventure Game{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/favicon_sword.png') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('proj') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('proj') }}
        {% endblock %}
    </head>
    <body>
        <header class="proj-header">
            <span class="proj-title">Medieval Adventure Game</span>
        </header>

        <nav class="proj-nav">
            <ul>
                <li><a href="{{ path('adventure') }}">Home</a></li>
                <li><a href="{{ path('proj_about') }}">About</a></li>
                <li><a href="{{ path('proj_api') }}">Api</a></li>
            </ul>
        </nav>

        <main class="proj-main">
            {% block body %}{% endblock %}
        </main>

        <footer class="proj-footer">
            <p>&#169; Adventure Game</p>
        </footer>
    </body>
</html>
